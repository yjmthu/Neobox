QMenu{
    border-radius:4px;
    background-color: rgba(192,192,192,150);
    color: black;
    font: 10pt "%1";
}

QMenu::item{
    background-color: transparent;
    border-radius: 4px;
    padding: 8px 4px;
}

QMenu::item:selected{
    background-color: white;
    border-radius: 4px;
    padding: 8px 4px;
}
